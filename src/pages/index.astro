---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<BaseLayout title="Paul Technologies Security">
	<nav class="sticky top-0 z-50 border-b border-slate-200 dark:border-white/10 bg-white/80 dark:bg-[#020617]/80 backdrop-blur-md">
		<div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
			<div class="font-bold text-xl tracking-tighter">PAUL<span class="text-blue-600">TECH</span></div>
			
			<div class="flex items-center gap-6">
				<div class="hidden md:flex gap-8 text-sm font-medium">
					<a href="#" class="hover:text-blue-500">Infrastructure</a>
					<a href="#" class="hover:text-blue-500">Operations</a>
				</div>
				<ThemeToggle />
				<button class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-bold">Secure Portal</button>
			</div>
		</div>
	</nav>

	<main class="max-w-7xl mx-auto px-6 py-20">
		<div class="grid grid-cols-1 md:grid-cols-12 gap-12 items-center mb-32">
			<div class="md:col-span-7">
				<div class="w-20 h-1 bg-blue-600 mb-6"></div>
				<h1 class="text-6xl font-black mb-8 leading-tight">Advanced Blue Team <span class="text-blue-600">Defense.</span></h1>
				<p class="text-lg text-slate-500 dark:text-slate-400 mb-10">Detailed infrastructure monitoring and proactive threat neutralization.</p>
				<div class="flex gap-4">
					<div class="h-12 w-40 bg-slate-900 dark:bg-white rounded"></div>
					<div class="h-12 w-40 border border-slate-300 dark:border-white/10 rounded"></div>
				</div>
			</div>
			
			<div class="md:col-span-5 relative">
				<div class="aspect-square bg-slate-200 dark:bg-white/5 rounded-3xl border border-slate-300 dark:border-white/10 flex items-center justify-center relative overflow-hidden">
					<div class="absolute inset-0 opacity-10 bg-[radial-gradient(#3b82f6_1px,transparent_1px)] [background-size:16px_16px]"></div>
					<span class="font-mono text-xs text-blue-500 animate-pulse">SYSTEM_VISUAL_PENDING</span>
				</div>
			</div>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			{[1, 2, 3].map((i) => (
				<div class="p-8 rounded-2xl border border-slate-200 dark:border-white/5 bg-white dark:bg-white/[0.02] hover:ring-1 ring-blue-500 transition-all">
					<div class="w-10 h-10 bg-blue-600/10 rounded-lg mb-6"></div>
					<div class="h-4 w-3/4 bg-slate-200 dark:bg-white/10 mb-4 rounded"></div>
					<div class="h-2 w-full bg-slate-100 dark:bg-white/5 mb-2 rounded"></div>
					<div class="h-2 w-5/6 bg-slate-100 dark:bg-white/5 rounded"></div>
				</div>
			))}
		</div>
	</main>
</BaseLayout>